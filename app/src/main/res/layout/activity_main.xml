<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cetscoreboard.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Updater_text"
        android:textAllCaps="true"
        android:id="@+id/updater_button_id"
        android:layout_marginTop="213dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_text"
        android:textAllCaps="true"
        android:id="@+id/user_button_id"
        android:layout_below="@+id/updater_button_id"
        android:layout_alignLeft="@+id/updater_button_id"
        android:layout_alignStart="@+id/updater_button_id"
        android:layout_marginTop="30dp" />

</RelativeLayout>
