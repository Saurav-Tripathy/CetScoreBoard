<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cetscoreboard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/step0001"
        android:scaleType="centerCrop" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Updater_text"
        android:textAllCaps="true"
        android:id="@+id/updater_button_id"
        android:layout_marginTop="213dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#fe9f14"
        android:layout_marginLeft="250dp"
        android:alpha="0.8"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_text"
        android:textAllCaps="true"
        android:id="@+id/user_button_id"
        android:layout_marginLeft="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/updater_button_id"
        android:background="#fe9f14"
        android:alpha="0.8"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

</RelativeLayout>
